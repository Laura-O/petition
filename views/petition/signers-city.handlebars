<body>
    <div class="container">
        <div class="intro">
            Petition-signers from {{city}}
        </div>
        <div class="table-wrapper">
            <div class="table">
                <div class="row header">
                    <div class="cell">Name</div>
                    <div class="cell">Age</div>
                    <div class="cell">Location</div>
                </div>
                {{#each results}}
                <div class="row">
                    {{#if this.url}}
                    <div class="cell">
                        <a href="{{this.url}}">{{this.first}} {{this.last}}</a>
                    </div>
                    {{else}}
                    <div class="cell">{{this.first}} {{this.last}}</div>
                    {{/if}}

                    <div class="cell">{{this.age}}</div>

                    <div class="cell">{{#if this.city}}
                        <a href="/signers/{{this.city}}" class="text-capitalize text-link">{{this.city}}</a>{{/if}}</div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>