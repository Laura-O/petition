<body>
    <div class="container">
        <div id="thanks-box">
            <div id="thanks-message">Thanks for signing, {{user.first}}!</div>
            <div id="signature">
                <img src="{{img}}">
            </div>
        </div>
        <div>
            <a href="/signers">See all {{number}} signers</a>
        </div>
        <div>
            <a href="/profile/edit">Edit your profile</a>
        </div>
        <div>
            <form action="/delete" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" id="delete-button" name="delete" value="Delete signature" />
            </form>
        </div>
    </div>